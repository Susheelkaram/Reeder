<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="toolbarStyle">@style/toolbarStyle</item>
    </style>

    <style name="toolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="actionButtonStyle">@style/menuActionButtonStyle</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="iconTint">@color/colorWhite</item>
    </style>

    <style name="menuActionButtonStyle">
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="feedTitleStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="articleTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="articleReadTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="articleDescriptionStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/colorXLightGrey</item>
    </style>

    <style name="BorderedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">15dp</item>
        <item name="strokeColor">@color/colorXXLightGrey</item>
    </style>


    <!-- Read Article page Styles -->
    <style name="readArticleTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="readArticleBodyStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="txtStyle_FeedName">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
