<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="@style/txtStyle_FeedName"
            android:id="@+id/txt_FeedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Digicular"
            android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/txt_ReadTitle"
            style="@style/readArticleTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Android leads market with 57% of share" />

        <TextView
            android:id="@+id/txt_ReadBody"
            style="@style/readArticleBodyStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/test_article_content" />

    </LinearLayout>
</layout>